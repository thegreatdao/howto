<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   width="680"
			   xmlns:map="training.hl.map.*" 
			   xmlns:view="training.hl.ui.view.*"
			   initialize="init()">
	
	<s:layout>
		<s:HorizontalLayout horizontalAlign="center" paddingTop="20" paddingBottom="20"/>
	</s:layout>
	
	<fx:Style source="assets/css/Style.css"/>
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import training.hl.bean.Profile;
			import training.hl.bean.User;
			
			private function init():void
			{
//				userService.getAllUsers();
				var user:User = new User();
				user.age = 20;
				user.firstName = "Flex";
				user.lastName = "Mate";
				user.userName = "FlexMate";
				user.password = "flexmate";
				var profile:Profile = new Profile();
				profile.bio = "flex born hard core";
				profile.hobbies = "programming in flex";
				profile.homePage = "www.flex.org";
				user.profile = profile;
				userService.saveUser(user);
			}

			protected function userService_resultHandler(event:ResultEvent):void
			{
				Alert.show(event.result[0].toString());
			}

			protected function userService_faultHandler(event:FaultEvent):void
			{
				Alert.show(event.fault.toString());
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<map:TrainingMap/>
		<s:RemoteObject id="userService" destination="trainingFlexService" result="userService_resultHandler(event)" fault="userService_faultHandler(event)"/>
	</fx:Declarations>
	
	<view:MainContainer/>
	
</s:Application>