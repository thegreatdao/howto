<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/jsp/main.jsp">
		<put-attribute name="title" value="Spring MVC" type="string" />
		<put-attribute name="nav" value="/WEB-INF/jsp/nav.jsp" />
	</definition>
 
	<definition name="index" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />
		<put-attribute name="title" value="Welcome" type="string" />
	</definition>

	<definition name="user/show" extends="baseLayout">
		<put-attribute name="title" value="show all users" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/user/show.jsp" />
	</definition>
	
	<definition name="user/form" extends="baseLayout">
		<put-attribute name="title" value="edit/create user" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/user/form.jsp" />
	</definition>

	<definition name="category/show" extends="baseLayout">
		<put-attribute name="title" value="show all categories" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/category/show.jsp" />
	</definition>
	
	<definition name="role/show" extends="baseLayout">
		<put-attribute name="title" value="show all roles" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/role/show.jsp" />
	</definition>
	
	<definition name="role/form" extends="baseLayout">
		<put-attribute name="title" value="edit/create role" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/role/form.jsp" />
	</definition>
	
	<definition name="category/form" extends="baseLayout">
		<put-attribute name="title" value="edit/create category" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/category/form.jsp" />
	</definition>
		
	<definition name="400" extends="baseLayout">
		<put-attribute name="title" value="Bad Request" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/400.jsp" />
	</definition>
	
	<definition name="403" extends="baseLayout">
		<put-attribute name="title" value="access denied" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/403.jsp" />
	</definition>
	
	<definition name="404" extends="baseLayout">
		<put-attribute name="title" value="resource doesn't exist" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/404.jsp" />
	</definition>
	
	<definition name="500" extends="baseLayout">
		<put-attribute name="title" value="internal error" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/500.jsp" />
	</definition>
	
	<definition name="503" extends="baseLayout">
		<put-attribute name="title" value="service unavailable" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/503.jsp" />
	</definition>
	
	<definition name="408" extends="baseLayout">
		<put-attribute name="title" value="request time out" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/408.jsp" />
	</definition>
	
	<definition name="general-error" extends="baseLayout">
		<put-attribute name="title" value="error page" type="string" />
		<put-attribute name="body" value="/WEB-INF/jsp/error/exception.jsp" />
	</definition>
	
</tiles-definitions>